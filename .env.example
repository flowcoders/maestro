# Maestro Payment Providers Configuration
# Copy this file to your Laravel application's .env file

# ==============================================================================
# DEFAULT PAYMENT PROVIDER
# ==============================================================================
# Specify which payment provider to use by default
MAESTRO_PAYMENT_PROVIDER=mercadopago

# ==============================================================================
# MERCADOPAGO CONFIGURATION
# ==============================================================================
# Get your access token from: https://www.mercadopago.com/developers/panel
# The token prefix determines the environment automatically:
#   - TEST-xxxxx (Sandbox/Testing)
#   - APP-xxxxx  (Production)
MERCADOPAGO_ACCESS_TOKEN=

# ==============================================================================
# HTTP CLIENT SETTINGS (Optional)
# ==============================================================================
# Configure HTTP client behavior for API requests

# Request timeout in seconds (default: 30)
MAESTRO_HTTP_TIMEOUT=30

# Number of retry attempts on failure (default: 3)
MAESTRO_HTTP_RETRY_ATTEMPTS=3

# Delay between retries in milliseconds (default: 1000)
MAESTRO_HTTP_RETRY_DELAY=1000
